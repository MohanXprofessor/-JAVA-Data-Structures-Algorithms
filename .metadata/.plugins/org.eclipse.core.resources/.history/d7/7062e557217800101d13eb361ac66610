package com.bubblesort;

import java.util.Scanner;

public class BubbleSort {

	public static void main(String[] args) {
		
	Scanner scan=new Scanner(System.in);
	
	// Taking array size
	System.out.println("Enter Array Length");
	int n=scan.nextInt();
	
	//Depending user input size of array
	int unSorted[]=new  int[n];
	
	
	// Array Elements From User
	System.out.println("Enter " + n+ " Array Elements:");
	for(int i=0;i<n;i++)
	{
		unSorted[i]=scan.nextInt();
	
	}
	
//	//To Display an Array You need forloop
//	 System.out.println("Array Elements are:");
//     for (int i = 0; i < n; i++) {
//         System.out.print(unSorted[i] + " ");
//     }
//     
//	System.out.println();
	
	//For-Each Loop to display Array Element
//	for(int arr:unSorted)
//	{
//		System.out.print(" "+arr+" ");
//	}
	
	// Bubble Sort Method 
	
	for(int i=0;i<n-1;i++)
	{
		boolean swap=false; // flag
		
		for(int j=0;j<n-i-1;j++)
		{
			
			if(unSorted[j] > unSorted[j+1])
			{
				
				int temp=unSorted[j];
				
				unSorted[j]=unSorted[j+1];
				unSorted[j+1]=temp;
				
				swap=true;
			}
		}
		if(!swap) break;
		
	}
	
	
	// Display Sorted Bubble Sort
	
	for(int sorted:unSorted)
	{
		System.out.print(sorted+" ");
	}
	
	
	
	
	

} 
} 
