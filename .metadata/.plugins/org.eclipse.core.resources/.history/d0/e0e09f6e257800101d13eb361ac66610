package com.bubblesort;

public class BubbleWhileLoop {

	
	
	int pass = 0; // just to display pass number
	int newN = n; // dynamic boundary

	while (newN > 1) {
	    boolean swap = false;
	    int lastSwapIndex = 0;
	    pass++;

	    for (int j = 0; j < newN - 1; j++) {
	        if (unSorted[j] > unSorted[j + 1]) {
	            int temp = unSorted[j];
	            unSorted[j] = unSorted[j + 1];
	            unSorted[j + 1] = temp;
	            swap = true;
	            lastSwapIndex = j + 1; // store last swapped position
	        }
	    }

	    System.out.print("After Pass " + pass + ": ");
	    for (int val : unSorted) {
	        System.out.print(val + " ");
	    }
	    System.out.println();

	    newN = lastSwapIndex; // reduce range
	    if (!swap) break; // already sorted
	}

}
